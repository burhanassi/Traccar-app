<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.customer.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_language"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_change_language"
                            android:visibility="visible"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="2dp"
                        android:padding="8dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_circular_driver" />
                </FrameLayout>


                <TextView
                    style="@style/LogesTechsMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="@string/login_hello"
                    android:textAlignment="center"
                    android:textColor="@color/pink_carnation"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_login_title"
                    style="@style/LogesTechsMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="@string/login_please_login"
                    android:textAlignment="center"
                    android:textColor="@color/fontTitleBlack"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical">

                    <com.logestechs.driver.utils.customViews.OutlinedEditText
                        android:id="@+id/et_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginEnd="55dp"
                        app:hintText="@string/hint_company_name"
                        app:imageStart="@drawable/ic_company"
                        app:isPassword="false" />

                    <com.logestechs.driver.utils.customViews.OutlinedEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="55dp"
                        app:hintText="@string/hint_email"
                        app:imageStart="@drawable/ic_email"
                        app:isPassword="false" />

                    <com.logestechs.driver.utils.customViews.OutlinedEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="55dp"
                        app:hintText="@string/hint_password"
                        app:imageStart="@drawable/ic_password"
                        app:isPassword="true" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_login"
                    style="@style/LogesTechsMedium"
                    android:layout_width="289dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="45dp"
                    android:layout_marginTop="52dp"
                    android:background="@drawable/background_logestechs_button"
                    android:text="@string/button_login"
                    android:textColor="#fff" />


                <LinearLayout
                    android:id="@+id/logestechs_logo_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_logestechs_logo"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/text_logestechs"
                        android:textAlignment="center"
                        android:textColor="#F14741"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/power_beyond_cargo"
                        android:textAlignment="center"
                        android:textColor="@color/detailsTextBlack"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>