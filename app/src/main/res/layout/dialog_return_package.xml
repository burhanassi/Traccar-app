<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-50dp"
            android:background="@drawable/background_dialog_circle_gray"
            android:clipChildren="false"
            android:elevation="3dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_return_package_white"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/beige_serenade"
            android:orientation="vertical"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="false"
                    android:background="@drawable/ic_close_white" />

                <TextView
                    style="@style/LogesTechsBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="@string/title_return"
                    android:textColor="@color/fontTrackHint"
                    android:textSize="18sp" />

                <TextView
                    style="@style/LogesTechsLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="@string/title_please_select_reason"
                    android:textColor="@color/fontTrackHint"
                    android:textSize="15sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_reasons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:clipToPadding="false"
                            android:overScrollMode="never"
                            android:paddingStart="16dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="16dp"
                            android:scrollbars="vertical"
                            tools:listitem="@layout/item_radio_group_list" />

                        <EditText
                            android:id="@+id/et_reason"
                            style="@style/LogesTechsBold"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="6dp"
                            android:background="@drawable/background_card_shape_white"
                            android:gravity="top"
                            android:inputType="textFilter"
                            android:padding="10dp"
                            android:saveEnabled="false"
                            android:textColor="@color/fontTitleBlack"
                            android:textSize="14sp"
                            tools:text="يرجى التسليم بسرعة والانتباه عند التحميل" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_receiver_paid_costs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="4dp"
                                android:saveEnabled="false"
                                android:theme="@style/ColorSwitchStyle" />

                            <TextView
                                style="@style/LogesTechsLight"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="8dp"
                                android:gravity="center_vertical"
                                android:text="@string/receiver_paid_cost"
                                android:textColor="@color/fontTrackHint"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/button_done"
                            style="@style/LogesTechsMedium"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/background_logestechs_button"
                            android:textAllCaps="false"
                            android:text="@string/button_done"
                            android:textColor="#fff" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>