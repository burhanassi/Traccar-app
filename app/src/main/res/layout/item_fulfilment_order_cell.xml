<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            bind:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/item_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@drawable/background_oval_white"
                android:elevation="2dp"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/item_product_name"
                            layout="@layout/item_card_row"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            bind:itemSrc="@{@drawable/ic_package_gray}" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button_done"
                            style="@style/LogesTechsMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_gravity="end"
                            android:background="@drawable/background_logestechs_button"
                            android:textAllCaps="false"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:text="@string/button_scan_tote"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>