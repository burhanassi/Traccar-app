<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="itemSrc"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="isCopyVisible"
            type="java.lang.Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@{itemSrc}"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_shipment_details_package_id" />

        <TextView
            android:id="@+id/text_item"
            style="@style/LogesTechsMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/detailsTextBlack"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="#100919003663"
            android:clickable="true"
            android:onClick="@{() -> textItem.setMaxLines(textItem.getMaxLines() == 1 ? Integer.MAX_VALUE : 1)}" />

        <ImageView
            android:id="@+id/button_copy"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_shipment_details_copy"
            android:visibility="@{isCopyVisible ? View.VISIBLE : View.GONE}"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</layout>
