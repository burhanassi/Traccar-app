<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/background_oval_white"
            android:elevation="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <include
                        android:id="@+id/item_barcode"
                        layout="@layout/item_card_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="13dp"
                        bind:itemSrc="@{@drawable/ic_barcode_gray}" />

                    <include
                        android:id="@+id/item_customer_name"
                        layout="@layout/item_card_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        bind:itemSrc="@{@drawable/ic_sender_gray}" />

                    <include
                        android:id="@+id/item_warehouse_name"
                        layout="@layout/item_card_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="13dp"
                        bind:itemSrc="@{@drawable/ic_warehouse_grey}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/background_card_semi_circle"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="6dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_boxes_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/fontTrackHint"
                                android:textSize="20sp" />

                            <TextView
                                style="@style/LogesTechsLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/boxes"
                                android:textColor="@color/detailsTextBlack"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </FrameLayout>


                    <ImageView
                        android:id="@+id/button_context_menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="visible"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_context_menu_gray"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="end"
                android:visibility="gone">

                <Button
                    android:id="@+id/button_pickup_shipping_plan"
                    style="@style/LogesTechsMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/background_logestechs_button"
                    android:minWidth="115dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/button_pickup"
                    android:textColor="#fff" />

                <!--                <Button-->
                <!--                    android:id="@+id/button_context_menu"-->
                <!--                    style="?android:attr/buttonBarButtonStyle"-->
                <!--                    android:layout_width="35dp"-->
                <!--                    android:layout_height="35dp"-->
                <!--                    android:layout_gravity="center_vertical"-->
                <!--                    android:layout_marginEnd="8dp"-->
                <!--                    android:background="@drawable/ic_context_menu" />-->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>