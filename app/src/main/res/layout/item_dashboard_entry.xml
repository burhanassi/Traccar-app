<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="titleText"
            type="java.lang.String" />

        <variable
            name="countText"
            type="java.lang.String" />

        <variable
            name="iconSrc"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="isCountHidden"
            type="java.lang.Boolean" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_dashboard_entry"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@{iconSrc}"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_scan_barcode_pink" />

            <TextView
                style="@style/LogesTechsMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@{titleText}"
                android:textColor="@color/fontTrackHint"
                android:textSize="16sp"
                tools:text="@string/dashboard_scan_new_package_barcode" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="-7dp"
            android:background="@drawable/background_dashboard_item_count"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="0"
            android:textAlignment="center"
            android:visibility="@{isCountHidden ? View.GONE : View.VISIBLE, default=visible}"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </FrameLayout>

</layout>